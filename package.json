{
	"name": "itabulbot",
	"version": "1.0.0",
	"description": "Bot Telegram per riepilogare lo stato dei lavori del progetto BUL in Italia.",
	"scripts": {
		"prepare": "husky install",
		"fetch": "node ./fetch.js",
		"dev": "nodemon --watch 'src/**' --ext 'js,ts,json' --exec 'ts-node src/bot.ts'",
		"lint": "eslint ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/theedoran/itabulbot.git"
	},
	"keywords": [
		"telegram",
		"bot",
		"bul",
		"fibra"
	],
	"author": "TheEdoRan",
	"license": "GPL-3.0",
	"bugs": {
		"url": "https://github.com/theedoran/itabulbot/issues"
	},
	"homepage": "https://github.com/theedoran/itabulbot#readme",
	"dependencies": {
		"axios": "^0.27.2",
		"dayjs": "^1.11.4",
		"dotenv": "^16.0.1",
		"escape-html": "^1.0.3",
		"module-alias": "^2.2.2",
		"telegraf": "^4.8.6",
		"typegram": "^3.10.0",
		"typescript-memoize": "^1.1.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.3",
		"@commitlint/config-conventional": "^17.0.3",
		"@types/escape-html": "^1.0.2",
		"@types/module-alias": "^2.0.1",
		"@types/node": "^18.7.2",
		"@typescript-eslint/eslint-plugin": "^5.33.0",
		"@typescript-eslint/parser": "^5.33.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.21.0",
		"eslint-config-prettier": "^8.5.0",
		"husky": "^8.0.1",
		"nodemon": "^2.0.19",
		"prettier": "^2.7.1",
		"typescript": "^4.7.4"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
